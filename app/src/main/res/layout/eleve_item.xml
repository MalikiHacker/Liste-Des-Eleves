<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/prenomLabel"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/prenom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prenomValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/prenomLabel"
        android:text="aaaa"/>

    <TextView
        android:id="@+id/nomLabel"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/nom"
        app:layout_constraintTop_toBottomOf="@id/prenomLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomValue"
        app:layout_constraintTop_toBottomOf="@id/prenomValue"
        app:layout_constraintLeft_toRightOf="@id/nomLabel"
        android:text="aaaa"/>

</androidx.constraintlayout.widget.ConstraintLayout>